<h1>Merchants</h1>

<%= form_with url: "/merchants/find_all", method: :get, local: true do |form| %>
  <%= form.label :search, 'Search for Merchants:' %>
  <%= form.text_field :search %>
  <%= form.submit 'Search' %>
<% end %>

<% @merchants.each do |merchant| %>
    <p><%= link_to "#{merchant.name}", "/merchants/#{merchant.id}" %></p>
<% end %>